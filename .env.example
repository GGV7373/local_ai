# Nora AI - Environment Variables
# Copy this to .env and customize

# Gateway Settings
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8765

# AI Server (Ollama)
AI_SERVER_URL=http://ollama:11434
AI_MODEL=llama2

# Database
DATABASE_URL=postgresql+asyncpg://nora:nora_password@postgres:5432/nora_db
POSTGRES_USER=nora
POSTGRES_PASSWORD=nora_password
POSTGRES_DB=nora_db

# Memory Settings
ENABLE_MEMORY=true
MEMORY_CONTEXT_LENGTH=10

# Logging
LOG_LEVEL=INFO

# Desktop Client Settings (for reference)
WAKE_WORD=hey nora
COMMAND_DURATION=5
