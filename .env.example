# Nora AI - Environment Variables
# Copy this to .env and customize

# =============================================================================
# Gateway Settings
# =============================================================================
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8765

# =============================================================================
# AI Provider Configuration
# =============================================================================
# Options: auto, ollama, gemini
# - auto: Uses Gemini if API key is set, otherwise Ollama
# - ollama: Force use Ollama (local, free)
# - gemini: Force use Google Gemini (requires API key)
AI_PROVIDER=auto

# Ollama settings (local AI - free)
AI_SERVER_URL=http://ollama:11434
AI_MODEL=llama2

# Google Gemini settings (cloud AI - requires API key)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://nora:nora_password@postgres:5432/nora_db
POSTGRES_USER=nora
POSTGRES_PASSWORD=nora_password
POSTGRES_DB=nora_db

# =============================================================================
# Memory Settings
# =============================================================================
ENABLE_MEMORY=true
MEMORY_CONTEXT_LENGTH=10

# =============================================================================
# Domain & SSL (Optional)
# =============================================================================
# Your custom domain (edit in company_info/config.json)
# DOMAIN=ai.yourcompany.com
# EMAIL=admin@yourcompany.com

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Desktop Client Settings (for reference)
# =============================================================================
WAKE_WORD=hey nora
COMMAND_DURATION=5
